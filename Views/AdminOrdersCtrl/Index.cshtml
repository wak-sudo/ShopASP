@using ShopASP.DTOs.Orders
@using ShopASP.Utils
@model Paging<OrderViewDto>

@section Styles {
    <link rel="stylesheet" href="~/css/AdminOrders.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Order Management";
}

<div class="admin-container">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Orders Management</h2>
        <a asp-controller="AdminPanelCtrl" asp-action="Index" class="btn btn-outline">Back to Dashboard</a>
    </div>

    <table class="orders-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Items)
            {
                <tr>
                    <td class="order-id">#@order.Id</td>
                    <td>@order.Username</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-controller="AdminOrderDetailsCtrl"
                           asp-action="Index"
                           asp-route-orderId="@order.Id"
                           class="btn btn-primary"
                           style="font-size: 0.8rem;">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav class="pagination-nav">
        @if (Model.CurrentPage > 1)
        {
            <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" class="btn btn-outline">Previous</a>
        }

        <span class="page-info">Page <strong>@Model.CurrentPage</strong> of @Model.TotalPages</span>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" class="btn btn-outline">Next</a>
        }
    </nav>
</div>