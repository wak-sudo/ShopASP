@using ShopASP.DTOs
@using ShopASP.DTOs.Orders
@using ShopASP.Utils
@model IReadOnlyCollection<OrderItemDto>

@section Styles {
    <link rel="stylesheet" href="~/css/ShoppingCart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminProduct.css" asp-append-version="true" />
}

<div class="cart-container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Your Shopping Cart</h2>
        <a asp-controller="HomeCtrl" asp-action="Index" class="btn btn-outline">← Continue Shopping</a>
    </div>

    @if (TempData[Constants.TempDataInfo] is string msg)
    {
        <div class="auth-error">@msg</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div style="text-align: center; padding: 50px; background: white; border-radius: 12px;">
            <p style="font-size: 1.2rem; color: #64748b;">Your cart is empty.</p>
            <a asp-controller="HomeCtrl" asp-action="Index" class="btn btn-primary">Start Shopping</a>
        </div>
    }
    else
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight: 600;">@item.Name</td>
                        <td>@item.Price.ToString("C", Constants.CurrentCulture)</td>
                        <td>@item.Quantity</td>
                        <td style="font-weight: 600;">@((item.Price * item.Quantity).ToString("C", Constants.CurrentCulture))</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="productId" value="@item.ProdId" />
                                <button type="submit" class="btn-remove">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr style="background: #f8fafc;">
                    <td colspan="3" style="text-align: right;"><strong>Grand Total:</strong></td>
                    <td colspan="2"><strong style="font-size: 1.2rem; color: #2563eb;">@Model.Sum(x => x.Price * x.Quantity).ToString("C", Constants.CurrentCulture)</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="shipping-section">
            <h3 style="margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 10px;">Shipping Details</h3>
            <form asp-action="MakeOrder" method="post" class="shipping-grid">
                <div class="form-group full-width">
                    <label>Recipient Name</label>
                    <input name="Recipient" class="form-control" required placeholder="e.g. John Doe" />
                </div>

                <div class="form-group">
                    <label>Country</label>
                    <input name="Country" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>City</label>
                    <input name="City" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Zip Code</label>
                    <input name="ZipCode" class="form-control" required pattern="[0-9]{2}-[0-9]{3}" placeholder="00-000" />
                </div>

                <div class="form-group">
                    <label>Street</label>
                    <input name="Street" class="form-control" required />
                </div>

                <div class="form-group full-width">
                    <label>House/Apartment Number</label>
                    <input name="HouseNumber" class="form-control" required />
                </div>

                <div class="full-width">
                    <button type="submit" class="btn-finalize">
                        Finalize Order (@Model.Sum(x => x.Price * x.Quantity).ToString("C", Constants.CurrentCulture))
                    </button>
                </div>
            </form>
        </div>
    }
</div>