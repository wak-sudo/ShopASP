@model ShopASP.DTOs.LoginDTO

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Login";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="auth-error">@ViewBag.Error</div>
        }

        <form asp-controller="LoginCtrl" asp-action="Index" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" placeholder="Enter your username" required />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 12px; font-size: 1rem;">
                Sign In
            </button>

            <div class="auth-footer">
                Don't have an account?
                <a asp-controller="Register" asp-action="Index" style="color: #2563eb; font-weight: 600;">Register</a>
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-controller="HomeCtrl" asp-action="Index" class="btn btn-outline">← Back to Home Page</a>
</div>